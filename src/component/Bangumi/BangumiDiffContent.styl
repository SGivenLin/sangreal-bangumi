.bangumi-img
    width 200px
    border: 1px solid #0187C5;
    box-shadow: 0 1px 5px #0187C5;
.bangumi-title
    font-weight: bold 
    text-align: center
    font-size: 20px
    height: 340px
    overflow: auto
    &::-webkit-scrollbar {
        width: 2px;
    }
    /* Handle */
    &::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 6px;
        background-clip: content-box;
    }
.bangumi-staff
    .staff-item
        margin-bottom: 4px
        display: flex
        .staff-label
            color: #666;
            padding-right 4px
            flex-shrink: 0
            font-weight: bold
        .staff-author
            color: #0084B4;
            .auhor-name
                display: inline-block
                margin 0 2px
                padding 0 1px
                border-radius: 4px
                margin-bottom: 2px