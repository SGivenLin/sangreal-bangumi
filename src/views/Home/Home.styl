.home-title
    text-align: center
    font-size: 32px
    font-weight: bold
    margin-bottom: 24px
.home-content
    text-align: center
    font-size: 16px
.fn-list
    display: flex
    justify-content: space-between;
    flex-wrap: wrap
    .fn-item
        width 200px
        margin: 0 12px 24px 12px
        .ant-card-body
            padding: 0 0 24px 0
            overflow: hidden
            border-radius: 8px;
        &:hover
            background: #99999933 !important
            img
                transform: scale(1.1)
            .desc
                transform: scale(1.1)
                color #333
        img
            width 200px
            height 180px
            box-shadow: 2px 2px 2px 0 rgba(0,0,0,.2);
            object-fit: cover
            margin-bottom: 12px
            transition: transform .8s
            transform: scale(1)
            transform-origin: 50% 100%
    .fn-link
        font-size: 20px
        font-weight: bold
        padding: 0
    .desc
        text-align: justify;
        padding 0 12px
        color #999
        font-size: 14px
        transform: scale(1)
        transition: color .8s, transform .8s
        transform-origin: 50% 0%