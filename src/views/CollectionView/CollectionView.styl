.search-input{
    width: calc(100% - 40px)
    margin 0 20px
    box-sizing: border-box
}

.collection-view
    width: 100%

#full-loading{
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    padding-top: 40vh;
    background: rgba(255,255,255,.6);
}

.search-suggestion
    border-radius: 8px
    padding 2px 16px
    cursor: pointer
    &:hover
        background: #f8f9fa