.search
    display: flex
    align-items: center
    padding-right: 12px
    .search-input
        flex: 1
        margin: 0 12px 0 20px

.collection-view
    width: 100%

#full-loading{
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    padding-top: 40vh;
    background: rgba(255,255,255,.6);
}

.search-suggestion
    border-radius: 8px
    padding 2px 16px
    cursor: pointer
    &:hover
        background: #f8f9fa